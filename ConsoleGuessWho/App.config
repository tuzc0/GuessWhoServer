<?xml version="1.0" encoding="utf-8"?>
<configuration>

	<configSections>
		<section name="entityFramework"
                 type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089"
                 requirePermission="false" />

		<section name="log4net"
                 type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
	</configSections>

	<appSettings file="Secrets\EmailConnection.config">
		<add key="Smtp.Host" value="smtp.gmail.com" />
		<add key="Smtp.Port" value="587" />
		<add key="Smtp.EnableSsl" value="true" />
		<add key="Smtp.DisplayName" value="GuessWho" />
		<add key="Smtp.TimeoutMs" value="30000" />
		
		<add key="Security.VerificationCodeLifetimeMinutes" value="10" />
		<add key="Security.RegexTimeoutMs" value="100" />
		<add key="Security.MaxFailedAttempts" value="5" />
		<add key="Security.VerificationCodePattern" value="^\d{6}$" />
	</appSettings>

	<connectionStrings configSource="Secrets\ConnectionStrings.local.config" />

	<log4net>
		<appender name="RollingFile"
                  type="log4net.Appender.RollingFileAppender">
			<file value="Logs\server.log" />
			<appendToFile value="true" />
			<rollingStyle value="Size" />
			<maximumFileSize value="10MB" />
			<maxSizeRollBackups value="10" />
			<staticLogFileName value="true" />
			<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date %-5level [%thread] %logger{1}.%method - %message%newline%exception" />
			</layout>
		</appender>

		<appender name="ConsoleAppender"
                  type="log4net.Appender.ConsoleAppender">
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date %-5level %logger{1}.%method - %message%newline%exception" />
			</layout>
		</appender>

		<root>
			<level value="info" />
			<appender-ref ref="RollingFile" />
			<appender-ref ref="ConsoleAppender" />
		</root>

	</log4net>

	<system.serviceModel>

		<bindings>
			<netTcpBinding>

				<binding>
					<security mode="None">
						<message clientCredentialType="None" />
						<transport clientCredentialType="None" />
					</security>
				</binding>

				<binding name="tcpBindingChat"
                         maxReceivedMessageSize="65536"
                         openTimeout="00:02:00"
                         closeTimeout="00:02:00"
                         sendTimeout="00:02:00"
                         receiveTimeout="00:10:00">
					<security mode="None" />
				</binding>

				<binding name="tcpBindingNoSecurity">
					<security mode="None" />
				</binding>

			</netTcpBinding>
		</bindings>

		<behaviors>
			<serviceBehaviors>
				<behavior name="mexBehavior">
					<serviceMetadata />
					<serviceDebug includeExceptionDetailInFaults="true" />
				</behavior>
			</serviceBehaviors>
		</behaviors>

		<services>

			<service behaviorConfiguration="mexBehavior"
                     name="GuessWho.Services.WCF.Services.UserService">
				<endpoint address=""
                          binding="netTcpBinding"
                          bindingConfiguration="tcpBindingNoSecurity"
                          contract="GuessWhoContracts.Services.IUserService" />
				<endpoint address="mex"
                          binding="mexTcpBinding"
                          contract="IMetadataExchange" />
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:8095/UserService" />
					</baseAddresses>
				</host>
			</service>

			<service behaviorConfiguration="mexBehavior"
                     name="GuessWho.Services.WCF.Services.LoginService">
				<endpoint address=""
                          binding="netTcpBinding"
                          bindingConfiguration="tcpBindingNoSecurity"
                          contract="GuessWhoContracts.Services.ILoginService" />
				<endpoint address="mex"
                          binding="mexTcpBinding"
                          contract="IMetadataExchange" />
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:8097/LoginService" />
					</baseAddresses>
				</host>
			</service>

			<service behaviorConfiguration="mexBehavior"
                     name="GuessWho.Services.WCF.Services.ChatService">
				<endpoint address=""
                          binding="netTcpBinding"
                          bindingConfiguration="tcpBindingChat"
                          contract="GuessWhoContracts.Services.IChatService" />
				<endpoint address="mex"
                          binding="mexTcpBinding"
                          contract="IMetadataExchange" />
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:8098/ChatService" />
					</baseAddresses>
				</host>
			</service>

			<service behaviorConfiguration="mexBehavior"
                     name="GuessWho.Services.WCF.Services.FriendService">
				<endpoint address=""
                          binding="netTcpBinding"
                          bindingConfiguration="tcpBindingNoSecurity"
                          contract="GuessWhoContracts.Services.IFriendService" />
				<endpoint address="mex"
                          binding="mexTcpBinding"
                          contract="IMetadataExchange" />
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:8099/FriendService" />
					</baseAddresses>
				</host>
			</service>
			<service behaviorConfiguration="mexBehavior"
                     name="GuessWho.Services.WCF.Services.UpdateProfileService">
				<endpoint address=""
                          binding="netTcpBinding"
                          bindingConfiguration="tcpBindingNoSecurity"
                          contract="GuessWhoContracts.Services.IUpdateProfileService" />
				<endpoint address="mex"
                          binding="mexTcpBinding"
                          contract="IMetadataExchange" />
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:8101/UpdateProfileService" />
					</baseAddresses>
				</host>
			</service>
			<service behaviorConfiguration="mexBehavior"
                     name="GuessWho.Services.WCF.Services.MatchService">
				<endpoint address=""
                          binding="netTcpBinding"
                          bindingConfiguration="tcpBindingNoSecurity"
                          contract="GuessWhoContracts.Services.IMatchService" />
				<endpoint address="mex"
                          binding="mexTcpBinding"
                          contract="IMetadataExchange" />
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:8100/MatchService" />
					</baseAddresses>
				</host>
			</service>
		</services>

	</system.serviceModel>

	<entityFramework>
		<providers>
			<provider invariantName="System.Data.SqlClient"
                      type="System.Data.Entity.SqlServer.SqlProviderServices, EntityFramework.SqlServer" />
		</providers>
	</entityFramework>

</configuration>
