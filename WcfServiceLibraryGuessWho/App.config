<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<section name="entityFramework"
				 type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089"
				 requirePermission="false" />
	</configSections>

	<appSettings>
		<add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
	</appSettings>

	<system.serviceModel>
		<behaviors>
			<serviceBehaviors>
				<behavior name="mexBehavior">
					<serviceDebug includeExceptionDetailInFaults="true" />
					<serviceMetadata httpGetEnabled="false" />
					<serviceThrottling maxConcurrentCalls="64" maxConcurrentSessions="200" />
				</behavior>
			</serviceBehaviors>
		</behaviors>
		<bindings>
			<netTcpBinding>
				<binding name="tcpBindingChat"
						 maxReceivedMessageSize="65536"
						 openTimeout="00:02:00"
						 closeTimeout="00:02:00"
						 sendTimeout="00:02:00"
						 receiveTimeout="00:10:00">
					<security mode="None"/>
				</binding>
			</netTcpBinding>
		</bindings>
		<services>
			<!-- UserService -->
			<service name="GuessWho.Services.WCF.Services.UserService" behaviorConfiguration="mexBehavior">
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:8095/UserService" />
					</baseAddresses>
				</host>
				<endpoint address=""
						  binding="netTcpBinding"
						  contract="GuessWho.Contracts.Services.IUserService" />
				<endpoint address="mex"
						  binding="mexTcpBinding"
						  contract="IMetadataExchange" />
			</service>

			<!-- LoginService -->
			<service name="WcfServiceLibraryGuessWho.Services.LoginService" behaviorConfiguration="mexBehavior">
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:8096/LoginService" />
					</baseAddresses>
				</host>
				<endpoint address=""
						  binding="netTcpBinding"
						  contract="ClassLibraryGuessWho.Contracts.Services.ILoginService" />
				<endpoint address="mex"
						  binding="mexTcpBinding"
						  contract="IMetadataExchange" />
			</service>

			<!-- ChatService -->
			<service name="WcfServiceLibraryGuessWho.Services.ChatService" behaviorConfiguration="mexBehavior">
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:8098/ChatService" />
					</baseAddresses>
				</host>
				<endpoint address=""
						  binding="netTcpBinding"
						  bindingConfiguration="tcpBindingChat"
						  contract="ClassLibraryGuessWho.Contracts.Services.IChatService" />
				<endpoint address="mex"
						  binding="mexTcpBinding"
						  contract="IMetadataExchange" />
			</service>
			
			<!-- FriendService -->
			<service name="WcfServiceLibraryGuessWho.Services.FriendService" behaviorConfiguration="mexBehavior">
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:8099/FriendService" />
					</baseAddresses>
				</host>
				<endpoint address="" 
						  binding="netTcpBinding"
						  contract="ClassLibraryGuessWho.Contracts.Services.IFriendService" />
				<endpoint address="mex" 
						  binding="mexTcpBinding" 
						  contract="IMetadataExchange" />
			</service>
		</services>
	</system.serviceModel>

	<entityFramework>
		<providers>
			<provider invariantName="System.Data.SqlClient"
					  type="System.Data.Entity.SqlServer.SqlProviderServices, EntityFramework.SqlServer" />
		</providers>
	</entityFramework>

	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
	</startup>
</configuration>
